<% if params[:action] == 'search' %>
  <div class="result-block">
    <%= bootstrap_flash %>
  </div>
<% end %>

<% if @users %>
  <div id="friend-lookup-result" class="well result-block col-md-10">
    <table class="search-results-table col-md-12">
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <strong>
                Name:
              </strong>
              <%= user.full_name %>
            </td>
            <td>
              <strong>
                Email:
              </strong>
              <%= user.email %>
            </td>
            <td>
              <strong>
                Profile:
              </strong>
              <%= link_to "View Profile", "#", class: "btn btn-xs btn-success" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>